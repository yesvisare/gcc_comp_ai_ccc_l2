# ============================================================================
# PRESIDIO Configuration (Local PII Detection)
# ============================================================================
# Presidio runs locally and doesn't require API keys
# Set to 'true' to enable PII detection
PRESIDIO_ENABLED=false
# Note: Requires spaCy model installed: python -m spacy download en_core_web_lg

# ============================================================================
# OPENAI Configuration (Embeddings)
# ============================================================================
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# PINECONE Configuration (Vector Database)
# ============================================================================
PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# ============================================================================
# Database Configuration (PostgreSQL for Audit Trails)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/governance_db

# ============================================================================
# Redis Configuration (Caching)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Apache Airflow Configuration (Retention Policies)
# ============================================================================
AIRFLOW_ENABLED=false
AIRFLOW_HOME=/path/to/airflow

# ============================================================================
# Data Residency Configuration (Multi-Region GCCs)
# ============================================================================
# EU Region (Frankfurt)
EU_REGION=eu-central-1

# India Region (Mumbai)
INDIA_REGION=ap-south-1

# US Region (N. Virginia)
US_REGION=us-east-1

# ============================================================================
# GDPR Configuration
# ============================================================================
# Erasure deadline in days (GDPR Article 17 requires 30 days)
GDPR_ERASURE_DEADLINE_DAYS=30

# Verification required for erasure requests
GDPR_VERIFICATION_REQUIRED=true

# ============================================================================
# Retention Policy Configuration
# ============================================================================
# HR data retention (7 years per FLSA/EEOC)
RETENTION_HR_DAYS=2555

# Financial data retention (10 years per SOX 802)
RETENTION_FINANCIAL_DAYS=3650

# Medical records retention (7 years per HIPAA)
RETENTION_MEDICAL_DAYS=2555

# Marketing data retention (30 days per GDPR minimization)
RETENTION_MARKETING_DAYS=30

# Audit logs retention (7 years per SOX/GDPR)
RETENTION_AUDIT_DAYS=2555

# General PII retention (3 years per GDPR minimization)
RETENTION_PII_DAYS=1095
