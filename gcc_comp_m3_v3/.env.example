# Database Configuration (PostgreSQL for audit logs)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=audit_logs
DB_USER=audit_user
DB_PASSWORD=your_secure_password_here

# Logging Configuration
LOG_FILE_PATH=/var/log/rag/audit.log
LOG_LEVEL=INFO

# Immutability Strategy
IMMUTABILITY_MODE=postgresql  # Options: postgresql, s3, hybrid
ENABLE_HASH_CHAIN=true

# AWS S3 Configuration (for archival - optional)
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=audit-logs-archive
S3_RETENTION_DAYS=2555  # 7 years for SOX compliance

# SIEM Integration (optional)
SIEM_ENABLED=false
SIEM_PLATFORM=splunk  # Options: splunk, elasticsearch, datadog

# Splunk Configuration
SPLUNK_HEC_URL=https://your-splunk-instance:8088/services/collector
SPLUNK_HEC_TOKEN=your_hec_token_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://your-elk-instance:9200
ELASTICSEARCH_INDEX=audit-logs
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key

# Datadog Configuration
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# Multi-tenant Configuration
TENANT_ID=default_tenant
ENABLE_MULTI_TENANT=false

# Retention Policy
HOT_STORAGE_DAYS=90    # Recent logs in PostgreSQL
WARM_STORAGE_DAYS=365  # Intermediate logs in S3 Standard
COLD_STORAGE_DAYS=2555 # Archive logs in S3 Glacier (7 years)
