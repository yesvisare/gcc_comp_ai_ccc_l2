# Vault Configuration (Primary Service)
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-only-token
VAULT_NAMESPACE=gcc-secrets

# Kubernetes ServiceAccount Auth (Production)
# VAULT_K8S_ROLE=rag-api
# VAULT_K8S_SA_TOKEN_PATH=/var/run/secrets/kubernetes.io/serviceaccount/token

# Secondary Services (Credentials managed by Vault)
# These are only needed if running WITHOUT Vault integration
OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_key_here

PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=us-east1-gcp

# PostgreSQL (Credentials managed by Vault in production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gcc_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev-only-password

# TLS/Certificate Configuration
TLS_ENABLED=false
CERT_PATH=/etc/tls/certs
CERT_RENEWAL_DAYS=30

# Logging
LOG_LEVEL=INFO

# Offline Mode (for local development/testing)
OFFLINE=false
