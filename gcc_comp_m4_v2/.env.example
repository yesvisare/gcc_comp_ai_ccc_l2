# L3 M4.2: Vendor Risk Assessment Configuration
# Copy this file to .env and configure as needed

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEOUT=30
MAX_RETRIES=3

# Database Settings (PostgreSQL for vendor registry)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vendor_risk_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Monitoring Settings
QUARTERLY_REVIEW_DAYS=90
CERTIFICATION_WARNING_DAYS=90

# Risk Thresholds
RISK_THRESHOLD_LOW=90
RISK_THRESHOLD_MEDIUM=70
RISK_THRESHOLD_HIGH=50

# Notification Settings
NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
ALERT_EMAIL=alerts@example.com

# Note: This module uses OFFLINE processing
# No external AI/ML API services required
