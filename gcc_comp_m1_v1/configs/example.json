    "enable_openai": false,
    "confidence_threshold": 0.5,
    "max_examples_per_type": 5
  },
  "regulation_filters": {
    "include": [
      "GDPR",
      "CCPA",
      "HIPAA",
      "SOC 2",
      "ISO 27001",
      "SOX",
      "PCI-DSS",
      "GLB"
    ],
    "exclude": []
