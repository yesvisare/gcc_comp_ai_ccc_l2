    "def compliance_monitoring_pipeline(tenant_id, documents, access_logs, events):\n",
    "    \"\"\"\n",
    "    Complete compliance monitoring pipeline.\n",
    "    \n",
    "    Args:\n",
    "        tenant_id: Business unit identifier\n",
    "        documents: Documents for PII detection\n",
    "        access_logs: Access attempts for authorization checks\n",
    "        events: System events for audit trail\n",
    "        \n",
    "    Returns:\n",
    "        dict: Complete compliance report\n",
    "    \"\"\"\n",
    "    print(f\"Running compliance monitoring pipeline for {tenant_id}...\\n\")\n",
    "    \n",
    "    # 1. Collect metrics\n",
    "    collector = ComplianceMetricsCollector(config)\n",
    "    collector.collect_pii_metrics(tenant_id, documents)\n",
    "    collector.collect_access_control_metrics(tenant_id, access_logs)\n",
    "    collector.collect_audit_trail_metrics(tenant_id, events)\n",
    "    metrics = collector.flush_metrics()\n",
    "    print(f\"Ã¢Å“" Collected {len(metrics)} metrics\")\n",
    "    \n",
    "    # 2. Calculate KPIs\n",
    "    calculator = KPICalculator(config)\n",
    "    kpis = calculator.calculate_all_kpis(metrics)\n",
    "    overall_score = calculate_compliance_score(kpis)\n",
    "    print(f\"Ã¢Å“" Calculated {len(kpis)} KPIs (Overall score: {overall_score:.2f}%)\")\n",
    "    \n",
    "    # 3. Generate dashboards\n",
    "    dashboards = {}\n",
    "    for stakeholder in ['cfo', 'cto', 'compliance_officer']:\n",
    "        dashboards[stakeholder] = generate_dashboard_config(kpis, stakeholder)\n",
    "    print(f\"Ã¢Å“" Generated {len(dashboards)} stakeholder dashboards\")\n",
    "    \n",
    "    # 4. Evaluate alerts\n",
    "    alert_manager = AlertManager(config)\n",
    "    alerts = alert_manager.evaluate_kpis(kpis)\n",
    "    print(f\"Ã¢Å“" Evaluated alerts: {len(alerts)} triggered\")\n",
    "    \n",
    "    # 5. Generate evidence\n",
    "    evidence = export_soc2_evidence(kpis, 90)\n",
    "    print(f\"Ã¢Å“" Generated SOC2 evidence report\")\n",
    "    \n",
    "    return {\n",
    "        'tenant_id': tenant_id,\n",
    "        'timestamp': datetime.now().isoformat(),\n",
    "        'metrics_collected': len(metrics),\n",
    "        'kpis': kpis,\n",
