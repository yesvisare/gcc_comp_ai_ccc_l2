# Prometheus Configuration
PROMETHEUS_ENABLED=false
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091
PROMETHEUS_RETENTION_DAYS=395  # 13 months for SOX compliance

# Grafana Configuration
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key_here

# OPA (Open Policy Agent) Configuration
OPA_ENABLED=false
OPA_URL=http://localhost:8181

# Alert Manager Configuration
ALERTMANAGER_ENABLED=false
ALERTMANAGER_URL=http://localhost:9093
PAGERDUTY_API_KEY=your_pagerduty_api_key_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Compliance Thresholds (can be customized per deployment)
THRESHOLD_AUDIT_COMPLETENESS=99.0
THRESHOLD_PII_PRECISION=95.0
THRESHOLD_PII_RECALL=99.0
THRESHOLD_ACCESS_VIOLATIONS=0.1
THRESHOLD_ENCRYPTION=100.0
THRESHOLD_CERT_EXPIRY=30

# Offline Mode (for local development/testing without external services)
OFFLINE=false

# Logging
LOG_LEVEL=INFO
