# Service Configuration
# OPA (Open Policy Agent) - requires binary installation
# Download from: https://www.openpolicyagent.org/docs/latest/
OPA_ENABLED=false
OPA_BINARY_PATH=opa
OPA_POLICY_PATH=./policies

# Presidio - Optional enhanced PII detection
# Requires: pip install presidio-analyzer presidio-anonymizer
# Also requires: python -m spacy download en_core_web_lg
PRESIDIO_ENABLED=false

# Logging
LOG_LEVEL=INFO

# API Settings
API_TIMEOUT=30
MAX_RETRIES=3

# Testing
RUN_TESTS_ON_STARTUP=false
TEST_COVERAGE_THRESHOLD=95.0
